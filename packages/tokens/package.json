{
  "name": "@rei/c1-tokens",
  "version": "0.1.1-alpha.0",
  "private": true,
  "description": "Cedar design tokens (DTCG) with web and React Native outputs.",
  "sideEffects": [
    "./dist/web/**/*.css"
  ],
  "type": "module",
  "exports": {
    "./web/core.css": "./dist/web/core.css",
    "./web/categories/*": "./dist/web/categories/*",
    "./web/components/*": "./dist/web/components/*",
    "./web/components.css": "./dist/web/components.css",
    "./web/tokens.json": "./dist/web/tokens.json",
    "./react-native/components/*": "./dist/react-native/components/*",
    "./react-native/tokens.json": "./dist/react-native/tokens.json"
  },
  "scripts": {
    "build": "tsx ./style-dictionary/build.ts",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@rei/c1-lint": "workspace:*",
    "@tokens-studio/sd-transforms": "^1.2.2",
    "rimraf": "^6.0.1",
    "style-dictionary": "^4.0.1",
    "tsx": "^4.19.1"
  }
}
