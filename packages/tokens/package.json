{
  "name": "@rei/c1-tokens",
  "version": "0.1.7-alpha.0",
  "private": true,
  "description": "Cedar design tokens (DTCG) with web and React Native outputs.",
  "sideEffects": [
    "./dist/css/**/*.css"
  ],
  "type": "module",
  "exports": {
    "./css/core.css": "./dist/css/core.css",
    "./css/categories/*": "./dist/css/categories/*",
    "./css/components/*": "./dist/css/components/*",
    "./css/components.css": "./dist/css/components.css",
    "./json/tokens.json": "./dist/json/tokens.json",
    "./json/components/*": "./dist/json/components/*",
    "./json/tokens.native.json": "./dist/json/tokens.native.json",
    "./json/components/button.native.json": "./dist/json/components/button.native.json"
  },
  "scripts": {
    "build": "tsx ./style-dictionary/build.ts",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@rei/c1-lint": "workspace:*",
    "@tokens-studio/sd-transforms": "^1.2.2",
    "rimraf": "^6.0.1",
    "style-dictionary": "^4.0.1",
    "tsx": "^4.19.1"
  }
}
