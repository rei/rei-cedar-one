{
  "name": "@rei/c1-ui",
  "version": "0.1.21-alpha.0",
  "private": true,
  "sideEffects": [
    "./dist/css/**"
  ],
  "exports": {
    "./fonts.css": "./dist/css/fonts.css",
    "./reset.css": "./dist/css/reset.css",
    "./components/*": "./dist/css/components/*",
    "./adapters/accordion": {
      "types": "./dist/adapters/accordion/index.d.ts",
      "default": "./dist/adapters/accordion/index.js"
    },
    "./adapters/accordion/vue": {
      "types": "./dist/adapters/accordion/vue.d.ts",
      "default": "./dist/adapters/accordion/vue.js"
    },
    "./adapters/accordion/react": {
      "types": "./dist/adapters/accordion/react.d.ts",
      "default": "./dist/adapters/accordion/react.js"
    },
    "./adapters/accordion/types": {
      "types": "./dist/adapters/accordion/types.d.ts"
    },
    "./adapters/input": {
      "types": "./dist/adapters/input/index.d.ts",
      "default": "./dist/adapters/input/index.js"
    },
    "./adapters/input/vue": {
      "types": "./dist/adapters/input/vue.d.ts",
      "default": "./dist/adapters/input/vue.js"
    },
    "./adapters/input/react": {
      "types": "./dist/adapters/input/react.d.ts",
      "default": "./dist/adapters/input/react.js"
    },
    "./adapters/input/types": {
      "types": "./dist/adapters/input/types.d.ts"
    }
  },
  "scripts": {
    "build": "pnpm run build:adapters && pnpm run build:css",
    "build:adapters": "pnpm run clean:adapters && vite build -c vite.adapters.config.ts && pnpm run build:types",
    "build:css": "postcss \"src/css/**/*.css\" --base src/css --dir dist/css",
    "build:types": "tsc -p tsconfig.adapters.json",
    "clean:adapters": "rm -rf dist/adapters",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@rei/c1-tokens": "workspace:*"
  },
  "devDependencies": {
    "@rei/c1-lint": "workspace:*",
    "@types/react": "^19.2.11",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-custom-media": "^12.0.0",
    "postcss-import": "^16.1.1",
    "react": "^19.2.4",
    "vite": "^7.3.1",
    "vue": "^3.5.27"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "vue": "^3.5.13"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  }
}
