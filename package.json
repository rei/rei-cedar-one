{
  "name": "@rei/c1",
  "version": "0.1.35-alpha.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:rei/rei-cedar-one.git"
  },
  "scripts": {
    "build": "pnpm run ws:build",
    "build-storybook": "pnpm run ws:storybook:build",
    "dev": "pnpm run ws:dev",
    "fixtures:vue": "pnpm --filter @rei/c1-vue build",
    "fixtures:vue:build": "pnpm --filter @rei/c1-vue build",
    "format": "prettier --write --single-quote",
    "icons:build": "pnpm --filter @rei/c1-icons build",
    "lint": "pnpm run lint:plugin:build && pnpm run ws:lint",
    "lint:fix": "pnpm run lint:plugin:build && pnpm run ws:lint:fix",
    "lint:plugin:build": "pnpm --filter @rei/c1-lint build",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "storybook": "pnpm run ws:storybook",
    "storybook:react": "pnpm tokens:build && pnpm ui:build && pnpm icons:build && pnpm --filter @rei/c1-react storybook",
    "storybook:vue": "pnpm tokens:build && pnpm ui:build && pnpm icons:build && pnpm --filter @rei/c1-vue storybook",
    "tokens:build": "pnpm --filter @rei/c1-tokens build",
    "typecheck": "pnpm run ws:typecheck",
    "ui:build": "pnpm --filter @rei/c1-ui build",
    "ws:build": "pnpm -r --if-present --filter \"!@rei/c1\" run build",
    "ws:dev": "pnpm -r --parallel --if-present dev",
    "ws:lint": "pnpm -r --if-present --filter \"!@rei/c1\" run lint",
    "ws:lint:fix": "pnpm -r --if-present --filter \"!@rei/c1\" run lint:fix",
    "ws:storybook": "pnpm tokens:build && pnpm ui:build && pnpm icons:build && storybook dev -p 6006 --config-dir apps/html/.storybook",
    "ws:storybook:build": "pnpm tokens:build && pnpm ui:build && pnpm icons:build && storybook build --config-dir apps/html/.storybook",
    "ws:typecheck": "pnpm -r --if-present --filter \"!@rei/c1\" run typecheck"
  },
  "lint-staged": {
    "package.json": "pnpm dlx sort-package-json@latest",
    "*.{ts,tsx,mts,cts,js,jsx,mjs,cjs,json,md,mdx,vue,yml,yaml}": [
      "pnpm format",
      "pnpm lint:fix"
    ]
  },
  "devDependencies": {
    "@chromatic-com/storybook": "5.0.0",
    "@eslint/js": "latest",
    "@html-eslint/parser": "^0.54.0",
    "@rei/c1-lint": "workspace:*",
    "@storybook/addon-docs": "10.2.6",
    "@storybook/addon-onboarding": "10.2.6",
    "@storybook/addon-vitest": "10.2.6",
    "@storybook/html-vite": "10.2.6",
    "@storybook/vue3-vite": "10.2.6",
    "@types/node": "^25.2.0",
    "eslint": "latest",
    "globals": "^17.3.0",
    "husky": "latest",
    "lint-staged": "latest",
    "prettier": "latest",
    "storybook": "10.2.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "latest",
    "vue-eslint-parser": "^10.2.0"
  }
}
