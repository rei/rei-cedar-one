{
  "name": "@rei/c1-react",
  "version": "0.1.2-alpha.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run typecheck && vite build && tsc -p tsconfig.app.json --declaration --emitDeclarationOnly --declarationDir dist/types",
    "build-storybook": "storybook build --config-dir .storybook",
    "dev": "pnpm storybook",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "storybook": "storybook dev -p 6008 --config-dir .storybook",
    "typecheck": "tsc -p tsconfig.app.json --noEmit && tsc -p tsconfig.node.json --noEmit"
  },
  "dependencies": {
    "@rei/c1-icons": "workspace:*",
    "@rei/c1-tokens": "workspace:*",
    "@rei/c1-ui": "workspace:*",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "5.0.0",
    "@rei/c1-lint": "workspace:*",
    "@storybook/addon-docs": "10.2.6",
    "@storybook/addon-onboarding": "10.2.6",
    "@storybook/addon-vitest": "10.2.6",
    "@storybook/react": "10.2.6",
    "@storybook/react-vite": "10.2.6",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "storybook": "10.2.6",
    "typescript": "~5.9.3",
    "vite": "^7.3.1"
  }
}
